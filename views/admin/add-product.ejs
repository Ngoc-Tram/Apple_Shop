<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include("header.ejs") %>
<form
  action="/admin/add-product"
  method="POST"
  enctype="multipart/form-data"
  class="col-6 border border-dark p-3 m-auto"
  style="margin-top: 10px"
>
  <h3 class="text-center">THÊM SẢN PHẨM</h3>
  <div class="form-group">
    <label class="" for="tenSP">Tên sản phẩm</label>
    <input
      class="form-control"
      name="tenSP"
      id="tenSP"
      placeholder="Nhập tên sản phẩm"
    />
  </div>
  <div class="form-group">
    <label class="" for="gia">Giá sản phẩm</label>
    <input
      class="form-control"
      name="gia"
      placeholder="Nhập giá sản phẩm"
      id="gia"
    />
  </div>
  <div class="form-group">
    <label class="" for="moTa">Mô tả</label>
    <textarea
      rows="5"
      class="form-control"
      placeholder="Nhập mô tả"
      name="moTa"
      id="moTa"
    >
    </textarea>
  </div>
  <div class="form-group">
    <label class="" for="urlHinh">Hình sản phẩm</label>
    <input
      type="file"
      class="form-control"
      placeholder="Chọn hình ảnh"
      name="urlHinh"
      id="urlHinh"
    />
  </div>
  <div class="form-group mt-3">
    <center>
      <button type="submit" class="btn btn-dark py-2 px-4">
        THÊM SẢN PHẨM
      </button>
    </center>
  </div>
</form>
