<%- include("header.ejs") %>

<table class="table table-bordered" style="width: 80%; margin: 0 auto">
  <thead>
    <tr class="table-success">
      <th scope="col">ID</th>
      <th scope="col">Tên sản phẩm</th>
      <th scope="col">Giá</th>
      <th scope="col">Giá Cũ</th>
      <th scope="col">Hình</th>
      <th scope="col">Thao tác</th>
    </tr>
  </thead>
  <% for (let s of listSP) { %>
  <tbody>
    <tr>
      <td><%= s.id %></td>
      <td><%= s.tenSP %></td>
      <td><%= s.gia.toLocaleString('vi') %>đ</td>
      <td><%= s.giaCu.toLocaleString('vi') %>đ</td>
      <td>
        <img src="/images/<%= s.urlHinh %>" width="100" height="100" alt="" />
      </td>
      <td>
        <a style="color: red" href="/update/<%= s.id %>"
          ><i class="fa-solid fa-pen-to-square fs-3 me-3"></i
        ></a>
        <a style="color: black" href="/del/<%= s.id %>"
          ><i class="fa-solid fa-trash fs-3"></i
        ></a>
      </td>
    </tr>
  </tbody>
  <% } %>
</table>
