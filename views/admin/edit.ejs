<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel= "stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"> </script>

<%- include("header.ejs") %>
<% for (let s of product) { %>
<form action="/updateD/<%= s.id  %>" method="POST" enctype="multipart/form-data" class="col-6 border border-dark p-3 m-auto" style="margin-top: 10px;" >
    <h3 class="text-center" >SỬA SẢN PHẨM</h3>
    <div class="form-group">
        <label class="" for="tenSP">Tên sản phẩm</label>
        <input class="form-control" name="tenSP" id="tenSP" value="<%= s.tenSP %>">
    </div>
    <div class="form-group">
        <label class="" for="gia">Giá sản phẩm</label>
        <input class="form-control" name="gia" value="<%= s.gia %>" id="gia">
    </div>
    <div class="form-group">
        <label class="" for="moTa">Mô tả</label>
        <textarea rows="5" class="form-control"  name="moTa" id="moTa"> <%= s.moTa %></textarea>
    </div>
    <div class="form-group">
        <label class="" for="urlHinh">Hình sản phẩm</label>
        <input type="file" class="form-control" name="urlHinh" id="urlHinh">
        <img src="/images/<%= s.urlHinh %>" width="100" height="100" alt="">
    </div>
    <div class="form-group mt-3 ">       
       <center> <button type="submit" class="btn btn-dark py-2 px-4">SỬA SẢN PHẨM</button></center>
    </div>
</form>    
<% } %>


